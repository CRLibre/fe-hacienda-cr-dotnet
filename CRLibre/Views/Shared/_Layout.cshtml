<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="shortcut icon" type="image/png" href="@Href("~/Images/cropped-CRLibre-Logo_03-270x270.png")" />
    <title>@ViewBag.Title - CRLibre</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body class="@(User.Identity.IsAuthenticated ? "fixed-nav sticky-footer" : "")" id="page-top">
    @Html.Partial("_MenuPartial")
    <div class="content-wrapper">
        <div class="container-fluid">
            @RenderBody()
        </div>
    </div>
    <footer class="@(User.Identity.IsAuthenticated ? "sticky-footer" : "")">
        <div class="container">
            <div class="text-center">
                <small>Copyright © @DateTime.Now.Year - CRLibre</small>
            </div>
        </div>
    </footer>
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fa fa-angle-up"></i>
    </a>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
